<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/app_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_main"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="245dp"
        android:layout_height="38dp"
        android:text="Welcome to alc_4_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.121"
        android:id="@+id/textView"/>
    <Button
        android:text="about alc"
        android:layout_width="131dp"
        android:layout_height="44dp"
        android:id="@+id/about_alc"
        app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="80dp"
        android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/my_profile"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/colorAccent"
        android:textColor="#fff"
        android:padding="8dp"
        android:layout_marginStart="8dp"/>
    <Button
        android:text="my profile"
        android:padding="8dp"
        android:layout_width="125dp"
        android:layout_height="47dp"
        android:background="@color/colorAccent"
        android:textColor="#fff"
        android:id="@+id/my_profile" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView"/>

</androidx.constraintlayout.widget.ConstraintLayout>